<div id="landingContainer" style="display: none;">
    <div id="upper">
        <div id="content">
        </div>
        <div id="right">
            <div id="rightContainer" style="display: flex; flex-direction: column; align-items: center; padding: 0; margin: 0; position: absolute; top: 0; right: 0; z-index: 50; width: 60px;">
                <div style="position: absolute; top: 0; right: 0; width: 100%; background-color: #242424; border-bottom-left-radius: 15px; z-index: -1; height: 340px;"></div>
                <div id="image_seal_container" style="margin-bottom: 20px; margin-top: 10px; display: flex; justify-content: center;">
                    <img id="image_seal" src="assets/images/Logo.png"/>
                    <div id="updateAvailableTooltip"><%- lang('landing.updateAvailableTooltip') %></div>
                </div>
                <div id="user_content" style="display: flex; justify-content: center; margin-bottom: 5px; width: 100%;">
                    <span id="user_text" style="display: none;"><%- lang('landing.usernamePlaceholder') %></span>
                    <div id="avatarContainer">
                        <button id="avatarOverlay"><%- lang('landing.usernameEditButton') %></button>
                    </div>
                </div>
                <div id="mediaContent" style="align-self: center; width: 100%; display: flex;">
                    <div id="internalMedia">
                        <div class="mediaContainer" id="settingsMediaContainer">
                            <button class="mediaButton" id="settingsMediaButton">
                                <img src="assets/images/icons/settings.svg" class="mediaSVG" style="filter: brightness(0) invert(1);" />
                                <div id="settingsTooltip"><%- lang('landing.settingsTooltip') %></div>
                            </button>
                        </div>
                    </div>
                    <div class="mediaDivider"></div>
                    <div id="externalMedia">
                        <div class="mediaContainer">
                            <a href="https://rustolia.eu/" class="mediaURL" id="linkURL">
                                <img src="assets/images/icons/compass.svg" class="mediaSVG" style="filter: brightness(0) invert(1);" />
                            </a>
                        </div>
                        <div class="mediaContainer">
                            <a href="https://rustolia.eu/shop" class="mediaURL" id="shopURL">
                                <img src="assets/images/icons/shopping-cart.svg" class="mediaSVG" style="filter: brightness(0) invert(1);" />
                            </a>
                        </div>
                        <div class="mediaContainer">
                            <a href="https://rustolia.eu/wiki" class="mediaURL" id="wikiURL">
                                <img src="assets/images/icons/book-open.svg" class="mediaSVG" style="filter: brightness(0) invert(1);" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="lower">
        <div id="left" style="position: relative; top: -35vh;">
            <div class="bot_wrapper" style="padding: 0;">
                <div id="content" style="padding: 0;">
                    <!-- Structure simple avec alignement strict -->
                    <div style="display: flex; flex-direction: column; align-items: flex-start; padding: 0; margin: 0;">
                        
                        <!-- Affichage du statut serveur (carré gris) -->  
                        <div id="server_status_wrapper" style="margin-bottom: 3vh; padding: 0; margin-left: 0; position: relative; left: 0;">
                            <!-- Vider le contenu statique pour laisser uniquement le contenu dynamique -->
                            <span class="bot_label" id="landingPlayerLabel" style="display: none;"><%- lang('landing.serverStatus') %></span>
                            <span id="player_count" style="display: block; width: 250px; box-sizing: border-box; padding: 0; margin: 0;"><%- lang('landing.serverStatusPlaceholder') %></span>
                        </div>
                        
                        <!-- Div pour le JavaScript -->
                        <div id="server_status" style="display: none;">
                            <!-- Sera rempli par JS -->
                        </div>
                        
                        <!-- Titre RUSTOLIA avec espacement réduit -->  
                        <div style="margin: 0 0 3vh 0; width: 250px; text-align: left;">
                            <h1 style="font-size: 45px; margin: 0; font-weight: 800; text-shadow: 0 2px 4px rgba(0,0,0,0.5); letter-spacing: 2px;">RUSTOLIA</h1>
                        </div>
                        
                        <!-- Conteneur des boutons -->  
                        <div style="position: relative; width: 250px; height: 53px; margin-top: 0;">
                            <!-- Bouton Jouer --> 
                            <div id="launch_content" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
                                <button id="launch_button" style="width: 100%; height: 100%; background-color: white; color: #333; font-weight: bold; font-size: 18px; padding: 0; display: block; border: none; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.3); text-transform: uppercase; letter-spacing: 1px; outline: none; box-sizing: border-box;">
                                    <%- lang('landing.launchButton') %>
                                </button>
                                <button id="server_selection_button" class="bot_label" style="display: none;"><%- lang('landing.launchButtonPlaceholder') %></button>
                            </div>
                            
                            <!-- Bouton Lancement --> 
                            <div id="launch_details" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: white; color: #333; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.3); display: none; overflow: hidden; box-sizing: border-box;">
                                <button style="width: 100%; height: 100%; border: none; background: none; font-weight: bold; font-size: 18px; padding: 0; text-transform: uppercase; letter-spacing: 1px; outline: none; color: #333;">
                                    <%- lang('landing.launchStarting') %><span id="loading_dots">...</span>
                                </button>
                                <!-- Éléments cachés pour préserver la fonctionnalité -->
                                <div style="display: none;">
                                    <span id="launch_progress_label">0%</span>
                                    <progress id="launch_progress" value="22" max="100"></progress>
                                    <span id="launch_details_text" class="bot_label"><%- lang('landing.launchDetails') %></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Service status (masqué) -->
                        <div id="mojangStatusWrapper" style="display: none; margin-top: 10px;">
                            <span class="bot_label">Rustolia Server Status</span>
                            <span id="mojang_status_icon">&#8226;</span>
                            <div id="mojangStatusTooltip">
                                <div id="mojangStatusTooltipTitle">Rustolia Services Status</div>
                                <div id="mojangStatusEssentialContainer">
                                    <!-- Essential Rustolia services are populated here. -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="center">
            <div class="bot_wrapper">
                <div id="content">
                    <!-- Le bouton d'actualités a été supprimé -->
                </div>
            </div>
        </div>
        <div id="right">
            <div class="bot_wrapper">
                <div id="newsCardsDisplay" style="margin-right: 75px;">
                    <!-- Les cartes d'actualités seront affichées ici directement -->
                </div>
            </div>
        </div>
    </div>
    <!-- Les cartes d'actualités sont maintenant directement affichées dans la partie droite du launcher -->
    <script src="./assets/js/scripts/landing.js"></script>
</div>